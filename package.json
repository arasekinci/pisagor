{
  "name": "pisagor",
  "scripts": {
    "docs:dev": "yarn workspace docs dev",
    "docs:build": "yarn workspace docs build",
    "docs:start": "yarn workspace docs start",
    "docs:lint": "yarn workspace docs lint",
    "packages:build": "lerna run --parallel --scope @pisagor/* build",
    "packages:lint": "eslint packages/* --ext .ts,.tsx",
    "dev": "yarn docs:dev",
    "build": "yarn docs:build && yarn packages:build",
    "start": "yarn docs:start",
    "lint": "yarn docs:lint && yarn packages:lint"
  },
  "dependencies": {
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "react": "^18.1.0",
    "react-dom": "^18.1.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.5",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "lerna": "^5.0.0",
    "prettier": "^2.6.2"
  },
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "private": true
}
